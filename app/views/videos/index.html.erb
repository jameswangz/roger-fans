<%= form_tag videos_path, method: 'get' do %>
  <p>
    <%= t 'activerecord.attributes.admin/matchvideo.year'  %>
    <%= number_field_tag :year, params[:year] %>
    <%= t 'activerecord.attributes.admin/matchvideo.match'  %>
	<%= select_tag(:match, options_for_select(Admin::Match.all.map { |m| [m.name, m.id] }, params[:match]), include_blank: true)%>
    <%= t 'activerecord.attributes.admin/matchvideo.opponent'  %>
    <%= text_field_tag :opponent, params[:opponent] %>
    <%= submit_tag "Search", :name => nil %>
  </p>
<% end %>

<table class="table table-striped table-bordered table-condensed">
  <thead>
    <tr>
      <th><%= t 'activerecord.attributes.admin/matchvideo.year'  %></th>
      <th><%= t 'activerecord.attributes.admin/matchvideo.match'  %></th>
      <th><%= t 'activerecord.attributes.admin/matchvideo.round'  %></th>
      <th><%= t 'activerecord.attributes.admin/matchvideo.opponent'  %></th>
      <th><%= t 'activerecord.attributes.admin/matchvideo.part'  %></th>
      <th><%= t 'activerecord.attributes.admin/matchvideo.url'  %></th>
    </tr>
  </thead>

  <tbody>
    <% @match_videos.each do |match_video| %>
      <tr>
		<td><%= match_video.year %></td>
		<td><%= match_video.match.try(:name) %></td>
		<td><%= match_video.round %></td>
		<td><%= match_video.opponent %></td>
		<td><%= match_video.part %></td>
		<td><%= link_to t('views.videos.watch'), watch_video_path(match_video), target: '_blank' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
